<% provide(:title, 'All recipes') %>
<h1>All recipes</h1>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h6>Insert the title or the ingredient you are looking for</h6>
        <%= form_tag search_path, method: 'get' do %>
        <%= text_field_tag :search, params[:search], class: "form-control" %> 
        <h6>Insert kcal max</h6>
        <%= text_field_tag :kcal_max, params[:search], class: "form-control" %> 
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
    </div>

<% end %>
    <div class="col-md-2">
        <%= link_to "New recipe", new_recipe_path, class: "btn btn-primary", style: "width: 100%;" %>
        <br>
    </div>
</div>
 <br>
 <br>

<%= will_paginate %>

<ul class="recipes">
    <% @recipes.each do |recipe| %>
        <%= link_to recipe.title, recipe_path(recipe) %>
        <br>
    <% end %>

</ul>

<%= will_paginate %>