<% provide(:title, "New Recipe") %>
<h1>New recipe</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@recipe) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control' %>
           
            <%= f.label :kcal %>
                <%= f.text_field :kcal, class: 'form-control' %>

            <%= f.label :ingredients %>
                <%= f.text_area :ingredients,size:'20x10', class: 'form-control' %>
        
            <%= f.label :directions %>
                <%= f.text_area :directions,size:'20x10', class: 'form-control' %>

            <%= f.file_field :photo, class: "btn btn-primary" %>
            <br>
            <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
