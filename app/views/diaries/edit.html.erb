<h1>Diary</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
        
            <% if !@diary.days.any? %>
                <% @diary.days.create(date: DateTime.now.to_date) %>
            <% else %>
                <% if @diary.days.last.date.to_s!=DateTime.now.to_date.to_s %>
                    <% @diary.days.create(date: DateTime.now.to_date) %>
                <% end %>
            <% end %>
        
        <%= render @diary.days.last %>
            
 
        
    </div>
            
</div>
